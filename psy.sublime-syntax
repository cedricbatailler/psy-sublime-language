contexts:
  main:
    - match: "#"
      scope: punctuation.definition.comment
      push:
        - meta_scope: comment.line.psy
        - match: \n
          pop: true
    - match: \b(if|fi)\b
      scope: keyword.operator.logical
    - match: (==|!=)
      scope: keyword.operator.comparison.psy
      